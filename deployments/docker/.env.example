# Aktis Collector Jira Environment Configuration
# Copy this file to .env and update with your actual values

# Image configuration
IMAGE_TAG=latest

# Jira Configuration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-api-token-here
JIRA_TIMEOUT=30

# Collection Configuration
MODE=production
BATCH_SIZE=50

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text
LOG_OUTPUT=both

# Storage Configuration
DATA_DIR=/app/data
BACKUP_DIR=/app/backups

# Optional: Cron schedule for automated collection
# Format: "0 2 * * *" for daily at 2 AM
# COLLECTION_SCHEDULE="0 2 * * *"
# UPDATE_SCHEDULE="0 */4 * * *"  # Every 4 hours for updates