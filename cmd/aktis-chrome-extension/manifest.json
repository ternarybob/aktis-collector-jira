{
  "manifest_version": 3,
  "name": "Aktis Jira Collector",
  "version": "0.1.164",
  "description": "Collects Jira page data and sends it to Aktis Collector server",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "sidePanel",
    "webNavigation"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*.atlassian.net/*",
    "https://*.jira.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/*",
        "https://*.jira.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open Aktis Jira Collector"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
